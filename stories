<body>

    <h1> 住驻专 专转</h1>

    <div id="storyList">
        <h2> 住驻专 拽:</h2>
        <ul id="stories"></ul>
    </div>

    <h2> 住祝 住驻专 砖</h2>
    <textarea id="storyInput" placeholder="转  转 住驻专 砖"></textarea>
    <button onclick="addStory()"> 砖专 住驻专</button>

    <script>
        function addStory() {
            let input = document.getElementById("storyInput");
            let newStory = document.createElement("li");
            let storyText = input.value;
            let storyLink = document.createElement("a");
            storyLink.href = "#";
            storyLink.textContent = storyText.substring(0, 20) + "...";
            newStory.appendChild(storyLink);
            document.getElementById("stories").appendChild(newStory);
            input.value = "";
        }
    </script>

    <a href="index.html" class="button"> 专 注 专砖</a>

</body>
